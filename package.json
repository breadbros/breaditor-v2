{
  "name": "breaditor",
  "version": "1.0.0",
  "description": "DXM & GRU try to make a first-principles minimal electron buddy",
  "main": "dist/main/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcgrue/electron-from-scratch.git"
  },
  "scripts": {
    "start": "yarn pre-build && electron .",
    "build": "yarn pre-build && echo DONE ESBUILD'N && echo START ELECTRON BUILDIN' && electron-builder",
    "pre-build": "node build-infrastructure/esbuild.js",
    "debug-in-chrome": "electron . --inspect-brk",
    "test": "jest  --verbose --runInBand --detectOpenHandles --forceExit --bail=false",
    "test-watch": "jest --watch",
    "test-ts": "ts-jest --verbose --runInBand --detectOpenHandles --forceExit --bail=false"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/fb-watchman": "^2.0.4",
    "dotenv": "^16.4.4",
    "emoji-dictionary": "^1.0.11",
    "esbuild-plugin-copy": "^2.1.1",
    "fb-watchman": "^2.0.2",
    "fs": "^0.0.1-security",
    "http": "^0.0.1-security",
    "is-electron": "^2.2.2",
    "path": "^0.12.7",
    "react-dockable-ts": "https://github.com/breadbros/react-dockable-ts2#v0.0.18",
    "react-dom": "^18.2.0",
    "react": "^18.2.0",
    "sam-js": "^0.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/node": "^17.0.22",
    "@types/react-dom": "^18.0.11",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^7.6.0",
    "electron-builder": "^23.0.3",
    "electron-devtools-installer": "^3.2.0",
    "electron": "^23.1.3",
    "esbuild-copy-static-files": "^0.1.0",
    "esbuild-css-modules-plugin": "^2.7.1",
    "esbuild-plugin-copy": "^2.0.2",
    "esbuild": "^0.14.39",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint": "^8.55.0",
    "jest-css-modules-transform": "^4.4.2",
    "jest-environment-jsdom": "^29.4.3",
    "jest": "^28.1.0",
    "jsdom": "^21.1.0",
    "prettier-eslint": "^16.1.2",
    "prettier": "^3.1.1",
    "react-devtools": "^4.27.2",
    "redux-devtools-extension": "^2.13.9",
    "rimraf": "^4.3.0",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.9.2",
    "typescript-plugin-css-modules": "^4.2.2",
    "typescript": "^4.6.2"
  },
  "build": {
    "appId": "com.gruniverse.danielstyle/yolo",
    "files": [
      "dist/**"
    ],
    "win": {
      "publish": [
        "github"
      ],
      "target": "portable",
      "icon": "src/main/resources/tray-icon.png"
    },
    "directories": {
      "buildResources": "electronbuild-resources",
      "output": "electronbuild-output"
    }
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
  }
}